<style>
  header {
    background-color: var(--accent-primary);
    color: var(--bg-main);
    padding: 1rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    z-index: 10;
  }

  .toggle-btn {
    background-color: var(--accent-secondary);
    color: var(--bg-main);
    border: none;
    padding: 0.5rem 1rem;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .toggle-btn:hover {
    background-color: var(--accent-tertiary);
    color: var(--text-main);
  }

  #headerToggle {
    margin-right: 1rem;
  }

  .theme-switch {
    display: flex;
    align-items: center;
  }

  .theme-switch input {
    display: none;
  }

  .theme-switch label {
    cursor: pointer;
    padding: 0.5rem;
    background-color: var(--accent-secondary);
    border-radius: 1rem;
    display: flex;
    align-items: center;
  }

  .theme-switch label::after {
